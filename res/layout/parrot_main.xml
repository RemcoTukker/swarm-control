<?xml version="1.0" encoding="utf-8"?>
<org.dobots.utility.LockableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:gravity="fill" >
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/lblRobot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/ardrone_title"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/lblCommands"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/ardrone_commands" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <Button
	            android:id="@+id/btnRemoteControl"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/roomba_lbl_control" />

	        <Button
	            android:id="@+id/btnCamera"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/ardrone_camera" />

	        <Button
	            android:id="@+id/btnEmergency"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Emergency" />

	    </LinearLayout>
	
	    <View
	        android:layout_width="wrap_content"
	        android:layout_height="20dp" />
	    
	    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/layVideo"
	        android:layout_width="249dp"
	        android:layout_height="206dp"
	        android:orientation="vertical"
	        android:layout_gravity="center"
	        >
		        
		    <ProgressBar 
			    android:id="@+id/pbLoading" 
			    android:indeterminate="true" 
			    android:indeterminateBehavior="repeat" 
			    android:layout_width="100dp" 
			    android:layout_height="100dp"
			    android:layout_gravity="center"
			    android:visibility="gone" />
		    
		    <SurfaceView
		        android:id="@+id/svParrot_Video"
		        android:layout_width="249dp"
		        android:layout_height="206dp"
		        android:layout_gravity="center"
				android:visibility="visible" />
		    
	    </FrameLayout>
	    
	    <include
	        android:id="@+id/layRemoteControl"
	        layout="@layout/parrot_remotectrl"
	        android:visibility="gone" />
	
	    <View
	        android:layout_width="wrap_content"
	        android:layout_height="20dp" />
	    
	    <include 
	        android:id="@+id/laySensors"
	        layout="@layout/parrot_sensors" />
	   
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		    <Button
		        android:id="@+id/btnSensors"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/ardrone_sensors" />
		</LinearLayout>
	  
	</LinearLayout>
</org.dobots.utility.LockableScrollView>